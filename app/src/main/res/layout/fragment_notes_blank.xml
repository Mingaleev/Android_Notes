<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tb_note_blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24" />

    <EditText
        android:id="@+id/et_note_blank_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_title" />

    <EditText
        android:id="@+id/et_note_blank_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2" />

    <Button
        android:id="@+id/btn_note_blank_update"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="28dp"
        android:text="@string/note_blank_btn_update" />

    <Button
        android:id="@+id/btn_note_blank_remove"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="28dp"
        android:text="@string/note_blank_btn_remove" />

</LinearLayout>
